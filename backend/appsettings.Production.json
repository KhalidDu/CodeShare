{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Error",
      "Microsoft.EntityFrameworkCore": "Error"
    },
    "Console": {
      "IncludeScopes": false
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "${DB_CONNECTION_STRING}"
  },
  "JwtSettings": {
    "SecretKey": "${JWT_SECRET_KEY}",
    "ExpiryHours": 8,
    "Issuer": "${JWT_ISSUER}",
    "Audience": "${JWT_AUDIENCE}"
  },
  "ClipboardSettings": {
    "MaxHistoryCount": 500,
    "DefaultHistoryLimit": 100,
    "CleanupIntervalDays": 90
  },
  "Security": {
    "RateLimit": {
      "DefaultLimit": 1000,
      "AuthEndpointLimit": 50,
      "WriteOperationLimit": 200,
      "TimeWindowMinutes": 1
    },
    "XssProtection": {
      "Enabled": true,
      "LogAttempts": true,
      "BlockRequests": true
    },
    "CsrfProtection": {
      "Enabled": true,
      "TokenLifetimeHours": 8,
      "LogAttempts": true
    },
    "Cors": {
      "AllowedOrigins": ["${FRONTEND_URL}"],
      "AllowCredentials": true
    }
  },
  "Performance": {
    "CacheSettings": {
      "DefaultExpirationMinutes": 30,
      "MaxCacheSize": "100MB"
    }
  }
}