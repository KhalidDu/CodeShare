{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=CodeSnippetManager;Uid=root;Pwd=root;CharSet=utf8mb4;",
    "MySQLConnection": "Server=localhost;Database=CodeSnippetManager;Uid=root;Pwd=root;CharSet=utf8mb4;",
    "SQLiteConnection": "Data Source=CodeSnippetManager.db;"
  },
  "JwtSettings": {
    "SecretKey": "your-super-secret-key-that-is-at-least-32-characters-long-for-jwt-token-signing",
    "ExpiryHours": 24
  },
  "ClipboardSettings": {
    "MaxHistoryCount": 100,
    "DefaultHistoryLimit": 50,
    "CleanupIntervalDays": 30
  },
  "Security": {
    "RateLimit": {
      "DefaultLimit": 100,
      "AuthEndpointLimit": 10,
      "WriteOperationLimit": 30,
      "TimeWindowMinutes": 1
    },
    "XssProtection": {
      "Enabled": true,
      "LogAttempts": true,
      "BlockRequests": true
    },
    "CsrfProtection": {
      "Enabled": true,
      "TokenLifetimeHours": 24,
      "LogAttempts": true
    }
  }
}