# 数据库配置
DB_CONNECTION_STRING=Server=mysql-server;Database=CodeSnippetManager;Uid=app_user;Pwd=your_secure_password;CharSet=utf8mb4;SslMode=Required;

# JWT 配置
JWT_SECRET_KEY=your-super-secure-jwt-secret-key-at-least-64-characters-long-for-production
JWT_ISSUER=https://your-domain.com
JWT_AUDIENCE=https://your-domain.com

# 前端 URL
FRONTEND_URL=https://your-frontend-domain.com

# 应用程序配置
ASPNETCORE_ENVIRONMENT=Production
ASPNETCORE_URLS=http://+:5000

# 日志配置
LOGGING_LEVEL=Warning

# 安全配置
ENABLE_HTTPS_REDIRECT=true
ENABLE_HSTS=true

# 性能配置
MAX_REQUEST_SIZE=10MB
CONNECTION_POOL_SIZE=100